# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks

# Global properties
separator=true
separator_block_width=15

# Guess weather every 10 minutes
[weather]
command=./scripts/weather.sh
interval=600
color=#A4C2F4  # Light blue for weather

[resources]
command=./scripts/resources.sh
interval=1
color=#B6D7A8  # Light green for system resources

[battery]
command=./scripts/battery.sh
interval=1
color=#C9C9FF  # Lavender for WiFi

[volume]
command=./scripts/volume.sh
interval=1
color=#F6A5A5  # Soft red for battery status

[wifi]
command=./scripts/network.sh
interval=1
color=#FFD966  # Golden yellow for volume

[bluetooth]
command=./scripts/bluetooth.sh
interval=1
color=#0082FC

[time]
command=./scripts/datetime.sh
interval=1

[power]
command=./scripts/power_menu.sh
interval=1
color=#BF0000
